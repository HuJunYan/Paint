<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_buy_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="买涨"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_buy_up_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_buy_up_text"
        android:text="42%"
        android:textColor="@color/buy_red"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/trading_percent_arror_left"
        android:drawablePadding="3dp"
        android:drawableRight="@mipmap/trading_percent_arror_right"
        android:text="今日用户操作"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/tv_buy_down_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="58%"
        android:textColor="@color/buy_green"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_buy_down_scale"
        android:text="买跌"
        android:textSize="11sp" />

    <View
        android:id="@+id/view_up_scale"
        android:layout_width="170dp"
        android:layout_height="3dp"
        android:layout_below="@id/tv_buy_up_text"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_red_normal_shape" />

    <View
        android:id="@+id/view_down_scale"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_buy_up_text"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/view_up_scale"
        android:background="@drawable/btn_green_normal_shape" />
</RelativeLayout>
