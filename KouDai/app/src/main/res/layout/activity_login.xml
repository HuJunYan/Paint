<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.koudai.operate.activity.LoginActivity">

    <com.koudai.operate.view.TitleBar
        android:id="@+id/tb_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_blue"
        app:tbLeftText="注册"
        app:tbRightText="取消"
        app:tbText="登录"
        app:tbTextColor="@color/white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginBottom="24.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="16.0dip"
        android:background="@drawable/shape_regist_rect_stroke">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@mipmap/ico_mobile" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/iv"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="17.0sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/border_dark_blue_selector"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

</LinearLayout>
